#!/bin/sh
# Get wait time before autostart is executed and wait if defined
LXC_WAIT=$(jq -r '.start_wait' /boot/config/lxc.json)
if [ ! -z "$LXC_WAIT" ] && [ "$LXC_WAIT" != "null" ] && [ "$LXC_WAIT" != "0" ]; then
  sleep ${LXC_WAIT}s
fi

# Execute LXC Autostart
/usr/libexec/lxc/lxc-containers start
